{
    "Excel_path": "./Plant_metabolites.xlsx",
    "Output_dir": null,
    
    "Main_plot": {
        "title": "Heatmap example",
        "legend": "Z-score",
        "y_label": 1,
        "y_label_font": 10,
        
        "data_column": ["2:5"],
        "data_type":"continuous",
        
        "scaling": true,
        "color": ["orange", "darkviolet"],
        
        "row_dendrogram": true,
        "column_dendrogram": false,
        
        "split_row_group": {
            "display": false,
            "method": "by_dend",
            "categorical": null
        },
        "split_column_group": {
            "display": false,
            "method": "by_categ",
            "categorical": 26
        }
    },
    
    "Side_plot": {
        "data_column": [7, 8], 
        "visaul_type": ["tab", "tab"],
        "data_type": ["conti", "categ"],
        "sub_legend": ["Age", "Height"], 
        "color": [["white","green"], ["salmon","yellow"]]
    },

    "Export": {
        "file_type": "png",
        "file_name": "Heatmap-of-plant",
        "width": 800,
        "height": 900,
        "resolution": 120
    }
}
